<script>
// Set the maximum number of stars
const maxStars = 50;

// Create a variable to keep track of the current number of stars
let numStars = 0;

// Function to animate the star
function animateStar() {
  // Increment the number of stars
  numStars++;

  // Check if the maximum number of stars has been reached
  if (numStars > maxStars) {
    // Stop animating the star
    return;
  }

  // Animate the star here...

  // Create the HTML for the star
  const starHTML = `
    <div class="star">
      <div class="star-inner">
        *
      </div>
    </div>
  `;

  // Get the HTML element containing the star
  const starContainer = document.getElementById("star-container");

  // Check if the element exists
  if (!starContainer) {
    // Stop the animation if the element does not exist
    return;
  }

  // Update the HTML element with the star
  starContainer.innerHTML = starHTML;

  // Get the star element
  const star = document.querySelector(".star");

  // Use CSS to move the star across the screen
  star.style.transform = "translateX(10%)";

  // Add styles to the star 
  star.style.position = "absolute";
  star.style.top = "50%";
  star.style.left = "50%";
  star.style.background = "#fff";
  star.style.fontSize = "20px";

  // Request another animation frame
  requestIdleCallback(animateStar);
}

// Start animating the star
animateStar();






</script>
