
    
      <div class="container-fluid my-5"> 
        <h1>All STORIES:</h1>
         
   
       
        <div class="row d-flex flex-row justify-content-center" id="cards">
          <% if(result.length > 0 ) {%>
           
            <% result.forEach(user => { %> 
              <div class=" col-lg-3 col-md-5 col-sm-4 " id="card" style="margin: 2rem;" >
                <div class="cards parallax lg-3 shadow" style="height: 24rem; border-radius: 11px;">
                  <a href="/post/read_post/<%= user.id %> " class="card_div">
                    <div class="images">
                      <img src="<%= user.image %> " class="" alt="..." style="height: 15rem;">
                    </div>
                  </a>
                  <div class="card-body">
                      <span class="title">
                        <a href="/post/read_post/<%= user.id %> "><%= user.title %></a>
                      </span>
                  </div>
                </div>
              </div>
            <% }) %> 
            <nav aria-label="Page navigation example" >
              <ul class="pagination justify-content-center">
            <% if(page < 1) { %>
  
              <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
              <% } %>
           
              <% if(page > 1) {%>
                <li class="page-item"><a href="?page=<%= page-1 %>" class="page-link">Previous</a></li>
                
                <% } %>  
              
                <% for(let i=1; i<= endingLink;i++ ) {%>
                  
                  <% if(i===page) {%>
                    <li class="page-item active"><a class="page-link" href="?page=<%= i %> " ><%= i %> </a></li>
                    
                    <% continue %>
                    <% } %>  
                    <li class="page-item"><a class="page-link" href="?page=<%= i %> "><%= i %> </a></li>
                  <% } %>  

                  <% if(page < itemsPerPage) {%>
                    <li class="page-item"><a class="page-link" href="?page=<%= page+1 %>">Next</a></li>
                   
                    <% } %>  

                         
      </ul>
      
    </nav>
          <% } else {%>
            <div class="div">
              <p>No title found</p>
            </div>
  <% } %> 
 
 
           
    
    

   
